<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:minHeight="48dp"
        android:title="Preference category">

        <SwitchPreference
            android:defaultValue="false"
            android:key="linea"
            android:title="@string/Mostrar" />
        <ListPreference
            android:defaultValue="listado"
            android:entries="@array/tipos_visualizacion"
            android:entryValues="@array/valores_visualizacion"
            android:key="tipo_visualizacion"
            android:title="@string/Formato" />
    </PreferenceCategory>
</PreferenceScreen>